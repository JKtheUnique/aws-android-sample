<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".CoverActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop = "16dp"
            android:layout_marginBottom = "16dp">

            <Button
                android:id="@+id/facebook_button"
                android:layout_width="280dp"
                android:layout_height="64dp"
                android:layout_marginTop="14dp"
                android:layout_centerHorizontal="true"
                android:text="FaceBook Login"/>

            <Button
                android:id="@+id/test_button_1"
                android:layout_width="280dp"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/facebook_button"
                android:layout_centerHorizontal="true"
                android:text="Cognito Login"/>

            <Button
                android:id="@+id/test_button_2"
                android:layout_width="280dp"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/test_button_1"
                android:layout_centerHorizontal="true"
                android:text="get Cognito ID"/>
            <Button
                android:id="@+id/test_button_3"
                android:layout_width="280dp"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/test_button_2"
                android:layout_centerHorizontal="true"
                android:text="Go to DataSetList"/>
            <Button
                android:id="@+id/test_button_4"
                android:layout_width="280dp"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/test_button_3"
                android:layout_centerHorizontal="true"
                android:text="Go to FirstDataSetRecordList"/>
            <Button
                android:id="@+id/test_button_5"
                android:layout_width="280dp"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/test_button_4"
                android:layout_centerHorizontal="true"
                android:text="Dynamo DB"/>
            <Button
                android:id="@+id/test_button_6"
                android:layout_width="280dp"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/test_button_5"
                android:layout_centerHorizontal="true"
                android:text="S3 Transfer"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
